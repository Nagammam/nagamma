#include<stdio.h>
void getdata(int *a,int *b,int *c)
{
        printf("enter 3 num");
        scanf("%d%d%d",a,b,c);
}
void add(int a,int b,int c,int *sum)
{
        *sum=a+b+c;
}
void output(int sum)
{
        printf("the sum of 3 num %d",sum);
}
int main()
{
        int x,y,z,t;
        getdata(&x,&y,&z);
        add(x,y,z,&t);
        output(t);
}
